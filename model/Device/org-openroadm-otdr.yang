  revision 2016-09-16 {
    description
      "Version 1.1.1";
  }

  rpc start-scan {
    input {
      leaf degree-number {
        type uint16;
        mandatory true;
      }
      leaf port-direction {
        type org-openroadm-port-direction:direction;
      }
      leaf distance {
        type uint32;
      }
      leaf resolution {
        type uint32;
      }
    }
    output {
      leaf status {
        type enumeration {
          enum "Launched" {
            value 1;
          }
          enum "Failed" {
            value 2;
          }
        }
        mandatory true;
        description
          "Launched or Failed for the scan's initial status";
      }
      leaf status-message {
        type string;
        description
          "Gives a more detailed reason for Launched or failure";
      }
    }
  }
  notification result {
    leaf status {
      type enumeration {
        enum "Completed" {
          value 1;
        }
        enum "Failed" {
          value 2;
        }
      }
      mandatory true;
      description
        "Completed or Failed for the scan's final status";
    }
    leaf result-file {
      type string;
    }
  }
  list otdr-packs {
    key "otdr-pack-name";
    leaf otdr-pack-name {
      type string;
    }
    uses org-openroadm-common-types:physical-location;
    leaf launch-cable-length {
      config true;
      type uint32;
      default "30";
      units "m";
    }
    list ports {
      key "port-name";
      config false;
      leaf port-name {
        type string;
      }
      leaf degree-number {
        type uint16;
      }
      leaf port-direction {
        type org-openroadm-port-direction:direction;
      }
    }
  }
}
