  namespace "http://org/openroadm/otdr";
  prefix org-openroadm-otdr;

  import org-openroadm-port-direction {
    prefix org-openroadm-port-direction;
  }
  import org-openroadm-common-types {
    prefix org-openroadm-common-types;
  }

