  grouping fcc-interfaces {
    container fcc {
      description
        "FCC (FlexO communication channel).
         FlexO-x(e) interface is modeled on OTSi Group interface.";
      reference
        "G.709.1 Amd4 draft 2023-03 and OTN based mapping FlexO-x (G.709 2022-11)";

      leaf fcc-channel-type {
        type enumeration {
          enum fcc0 {
            value 1;
            description
              "FCC0 channel";
          }
          enum fcc1 {
            value 2;
            description
              "FCC1 channel";
          }
        }
      }
    }
  }

  augment "/org-openroadm-device:org-openroadm-device/org-openroadm-device:interface" {
    when "org-openroadm-device:type = 'openROADM-if:fcc'";
    uses fcc-interfaces;
  }
}
